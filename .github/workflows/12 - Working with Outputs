name: 12 - Working with Outputs

on: 
  workflow_dispatch:
    build-status:
      type: choice
      options:
        - success
        - failure
      default: success

jobs:
  build: 
  runs-on: ubuntu-latest
  steps:
    - name: Print GITHUB_OUTPUT path
      run: echo $GITHUB_OUTPUT
    - name: Build
      id: build
      run: echo "${{inputs.build-status}}" >> "$GITHUB_OUTPUT"
  deploy:
  runs-on: ubuntu-latest
  needs: build
  if: ${{ contains(inputs.build-status, success)}}
  steps:
    Deploy:
    run: echo "Deploying"
